<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subDeviceTitleBackground"
    >
    <TextView
        android:id="@+id/titleTextView"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/deviceColumnMarginLeft"
        android:layout_marginTop="@dimen/deviceColumnMarginTop"
        android:layout_marginRight="@dimen/deviceColumnMarginRight"
        android:layout_marginBottom="@dimen/deviceColumnMarginBottom"/>
    <TextView
        android:id="@+id/miscTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/deviceColumnMarginTop"
        android:layout_marginRight="@dimen/deviceColumnMarginRight"
        android:layout_marginBottom="@dimen/deviceColumnMarginBottom"
        android:textSize="10dp"
        />
</LinearLayout>